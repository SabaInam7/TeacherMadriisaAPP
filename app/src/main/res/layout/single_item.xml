<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/mainLayout"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/TVsabq"
            app:layout_constraintEnd_toEndOf="@+id/TVname"
            app:layout_constraintStart_toEndOf="@+id/TVname"
            app:layout_constraintTop_toBottomOf="@+id/TVsabq">

            <TextView
                android:id="@+id/TVst_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVrollNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="RollNo"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/TVst_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVsabq"
                android:layout_width="76dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="sabq"
                app:layout_constraintBottom_toTopOf="@+id/TVsabqi"
                app:layout_constraintEnd_toEndOf="@+id/TVrollNo"
                app:layout_constraintTop_toBottomOf="@+id/TVrollNo"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/TVsabqi"
                android:layout_width="88dp"
                android:layout_height="26dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="4dp"
                android:text="sabqi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/TVmanzil"
                app:layout_constraintTop_toBottomOf="@+id/TVname"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/TVmanzil"
                android:layout_width="82dp"
                android:layout_height="41dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="12dp"
                android:text="manzil"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TVname"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/TVname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="name"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/TVrollNo"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>